<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/name_project"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textFontWeight="1000"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/deadline_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_project"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/deadline_project"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deadline: "
                        android:textColor="@color/black"
                        android:textFontWeight="1000"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="15dp" />
                    <TextView
                        android:id="@+id/deadline_project_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/steal_gray"
                        android:textFontWeight="1000"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="15dp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/edit_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:backgroundTint="#00FFFFFF"
                    app:srcCompat="@drawable/setings_points" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</LinearLayout>